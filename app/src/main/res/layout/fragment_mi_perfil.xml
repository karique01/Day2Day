                android:layout_marginEnd="@dimen/big_margin"
                android:layout_marginBottom="@dimen/big_margin"
                android:drawableStart="@drawable/ic_place"
                android:hint="@string/departamento"
                android:imeOptions="actionDone"
                android:maxLines="1"
